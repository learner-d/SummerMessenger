<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.register.RegisterUserDataFormFragment">

    <TextView
        android:id="@+id/tv_form_title"
        android:text="Уведіть свої дані"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        />

    <TextView
        android:id="@+id/tv_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ім'я та прізвище"
        android:textSize="24sp"
        android:layout_marginTop="130dp"
        app:layout_constraintStart_toStartOf="@id/et_display_name"
        app:layout_constraintTop_toTopOf="@id/tv_form_title"
        />
    <EditText
        android:id="@+id/et_display_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_display_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_nickname"
        android:text="Ваш нікнейм (необов'язково)"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/tv_display_name"
        app:layout_constraintTop_toBottomOf="@id/et_display_name"
        android:layout_marginTop="60dp"
        />
   <EditText
       android:id="@+id/et_nickname"
       android:layout_width="0dp"
       android:layout_height="50dp"
       app:layout_constraintStart_toStartOf="@id/et_display_name"
       app:layout_constraintEnd_toEndOf="@id/et_display_name"
       app:layout_constraintTop_toBottomOf="@id/tv_nickname"
       android:importantForAutofill="no"
       />

    <Button
        android:id="@+id/btn_next"
        android:text="Далі"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_nickname" />

</androidx.constraintlayout.widget.ConstraintLayout>